{{> nav-block}}
<main>
  <div class="container">
    <div class="row signuprow center-align">
      <div class="col l4 offset-l4 signupcol center-align">
        <h3>
          Login!
        </h3>
        {{!-- <img class="signupImage" src="images/RoadRunner.png" alt=""> --}}
        <div class="row">
          <form name="login" action="/api/login" method="POST" class="col s12 createUser signUp">
            <div class="row">
              <div class="row">
                <div class="input-field col s12">
                  <input id="email" name="email" type="email" class="validate">
                  <label class="loginFont" for="email">youremail@someservice.com</label>
                </div>
              </div>
              <div class="input-field col s12">
                <input id="password" name="password" type="password" class="validate">
                <label class="loginFont" for="email">Password</label>
              </div>
            </div>
            <button class="btn btn-waves" type="submit" id="submit">Login</button>
            <a class="btn btn-waves" href="/signUp">
              Sign Up!
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
